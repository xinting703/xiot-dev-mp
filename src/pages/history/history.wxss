/* pages/history/history.wxss */
.page-container {
  padding-top: 0;
  padding-bottom: 120rpx;
}
image {
  border-radius: 4rpx;
}
.dev-item {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
  box-shadow:0 8px 40px rgba(159,168,181,0.32);
}
.photo-header {
  padding-top: 30rpx;
}
.icon-arrow {
  position: absolute;
  top: 44rpx;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
}
.options {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.addr {
  margin-top: 25rpx;
}
/*tab  */
.tab-wrapper {
  position: relative;
  width: 100%;
  background-color: #fff;
}
.tab-wrapper
.tab {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.tab-wrapper
.tab-item {
  width: 16.66%;
  height: 100%;
  display: inline-block;
  font-size: 24rpx;
  color: #6c737e;
  line-height: 36rpx; 
  padding-top: 14rpx;
}
.tab-wrapper
.tab-line {
  position: absolute;
  bottom: 1px;
  left: 0;
  width: 100%;
  height: 2px;
}
.tab-wrapper
.tab-line
.line-item {
  width: 16.66%;
  height: 2px;
  float: left;
}
.tab-wrapper
.tab-line
.line-item
.line {
  position: relative;
  left: 50%;
  margin-left: -15rpx; 
  width: 30rpx;
  height: 2px;
}
.tab-wrapper
.tab-line
.line-item.active
.line {
  border-bottom: 2px solid #90959D;
}
/*photo列表  */
.photo-list {
  width: 100%;
  padding: 20rpx 4rpx 0;
}
.photo-list
.item-wrapper {
  position: relative;
  width: 50%;
  display: inline-block;
  line-height: 0;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 20rpx;
}
.photo-list
.img-photo {
  width: 100%;
}
.photo-list
.interval {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 22rpx;
}
/*全天时景*/
.btn-video {
  position: fixed;
  z-index: 9;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-top: 1px solid #eee;
}
.icon-play {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 0;
  margin-top: -6rpx;
  margin-right: 10rpx;
}
.check-more {
  position: relative;
  left: 50%;
  width: 240rpx; 
  height: 44rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  color: #9fa3a8;
  text-align: center;
  margin-left: -120rpx;
  margin-bottom: 30rpx;
}
/*缺省*/
.default {
  font-size: 36rpx;
  color: #9FA3A8;
  padding-top: 60rpx;
  padding-bottom: 75rpx;
}
.img-no-photo {
  width: 248rpx;
  height: 148rpx;
  margin-bottom: 40rpx;
}

/* 加载更多 */
.loading-text {
  font-size: 30rpx;
  color: #6c737e;
  text-align: center;
}
.no-more-text {
  position: fixed;
  bottom: 180rpx;
  left: 50%;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background-color: #000;
  padding: 15rpx 30rpx;
  transform: translateX(-50%);
  border-radius: 15rpx;
  transition: opacity 1s;
}
/* 没有权限 */
.no-permission-wrapper {
  position: relative;
  top: 160rpx;
  text-align: center;
}
.img-no-permission {
  width: 400rpx;
  height: 260rpx;
}
.text-no-permission {
  color: #9FA3A8;
  font-size: 36rpx;
  margin-top: 10rpx;
}